@{
    ViewBag.Title = "Home Page";
}

<h2>My Media</h2>
<h4>Home Page</h4>

@using(Html.BeginForm("Index","Home" ,FormMethod.Post, new { enctype = "multipart/form-data" }))
{
 <div class="container">
    <div class="row">
        <div class="col-6 col-sm-4" id="description">
            <h3>Description</h3>
            <p>
                Welcome to the My Media site, where you can upload and download different media files, such
                as documents, images and videos. Please selct the type of file that you would like to upload,
                attach the file and click the upload button.
            </p>
        </div>
        <div class="col-6 col-sm-4" id="option">
            <h3>Option Selection</h3>
            <form id="form1" method="post">
                <div class="form-check">
                    <input class="form-check-input" type="radio" name="option" id="Document" value="option1">
                    <label class="form-check-label" for="Document">
                        Document
                    </label>
                </div>
                <div class="form-check">
                    <input class="form-check-input" type="radio" name="option" id="Images" value="option2">
                    <label class="form-check-label" for="Images">
                        Images
                    </label>
                </div>
                <div class="form-check">
                    <input class="form-check-input" type="radio" name="option" id="Videos" value="option3">
                    <label class="form-check-label" for="Videos">
                        Video
                    </label>
                </div>
                <div class="form-group">
                    <label for="File">Choose File</label>
                    <input type="file" class="form-control-file" id="File" name="file">
                </div>
                <input class="btn btn-primary" type="submit" value="Submit">
                @ViewBag.Message
            </form>
        </div>
    </div>
 </div>
}